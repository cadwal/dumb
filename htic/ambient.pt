
/**
 **  Ambient sounds
 **/

#define AmbientRWait Duration 0sec RndDuration 160sec

SoundType AMB10
SoundType AMB10-1 Redir AMB10 BendConst -2
SoundType AMB10-2 Redir AMB10 BendConst -4
SoundType AMB10-3 Redir AMB10 BendConst -8
SoundType AMB10-4 Redir AMB10 BendConst -12
SoundType AMB10-5 Redir AMB10 BendConst -16

SoundType AMB9
SoundType AMB9-1 Redir AMB9 BendConst -2
SoundType AMB9-2 Redir AMB9 BendConst -4
SoundType AMB9-3 Redir AMB9 BendConst -8
SoundType AMB9-4 Redir AMB9 BendConst -12
SoundType AMB9-5 Redir AMB9 BendConst -16

PhaseTable Growl /* sounds like more laughter to me??? */
  Phase WAIT "A" AmbientRWait
  Phase PLAY "A"  Duration 120msec Sound AMB9
  Phase -    "A"  Duration 160msec Sound AMB9-1
  Phase -    "A"  Duration 160msec Sound AMB9-1
  Phase -    "A"  Duration 200msec Sound AMB9-1
  Phase -    "A"  Duration 240msec Sound AMB9-2
  Phase -    "A"  Duration 300msec Sound AMB9-3
  Phase -    "A"  Duration 350msec Sound AMB9-4
  Phase -    "A"  Duration 350msec Sound AMB9-5 Goto WAIT

PhaseTable Laughter
  Phase WAIT "A" AmbientRWait
  Phase PLAY "A"  Duration 120msec Sound AMB10
  Phase -    "A"  Duration 160msec Sound AMB10-1
  Phase -    "A"  Duration 160msec Sound AMB10-1
