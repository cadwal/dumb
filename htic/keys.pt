Gettable GreenKey
  Icon "AKYYA0"  /* GKEYICON or KGZGA0 */
  Anim "J" Timing 100msec XCenter
  IconPos 64 8
  DefaultMaximum 1
  KeyType 1
  OneMapOnly

Gettable BlueKey
  Icon "BKYYA0"  /* BKEYICON or KGZBA0 */
  Anim "J" Timing 100msec XCenter
  IconPos 94 6
  DefaultMaximum 1
  KeyType 2
  OneMapOnly

Gettable YellowKey
  Icon "CKYYA0"  /* YKEYICON or KGZYA0 */
  Anim "I" Timing 100msec XCenter
  IconPos 124 4
  DefaultMaximum 1
  KeyType 3
  OneMapOnly

PhaseTable BGKey
  Default Duration 50msec
  Default Glow

  Phase INIT "A"
  Phase -    "B"
  Phase -    "C"
  Phase -    "D"
  Phase -    "E"
  Phase -    "F"
  Phase -    "G"
  Phase -    "H"
  Phase -    "I"
  Phase -    "J"  Goto INIT

PhaseTable YKey
  Default Duration 50msec
  Default Glow

  Phase INIT "A"
  Phase -    "B"
  Phase -    "C"
  Phase -    "D"
  Phase -    "E"
  Phase -    "F"
  Phase -    "G"
  Phase -    "H"
  Phase -    "I"  Goto INIT

Proto GreenKey 73
  Sprite "AKYY"
  Phases BGKey
  Size 32 16
  StickToFloor
  Gets GreenKey 1
  PickupMessage N_("green key")
  PickupSound KEYUP

Proto BlueKey 79
  Sprite "BKYY"
  Phases BGKey
  Size 32 16
  StickToFloor
  Gets BlueKey 1
  PickupMessage N_("blue key")
  PickupSound KEYUP

Proto YellowKey 80
  Sprite "CKYY"
  Phases YKey
  Size 32 16
  StickToFloor
  Gets YellowKey 1
  PickupMessage N_("yellow key")
  PickupSound KEYUP
